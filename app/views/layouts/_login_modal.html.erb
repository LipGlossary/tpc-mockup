<div class='modal fade' id='loginModal' tabindex='-1' role='dialog' aria-labelledby='loginModalLabel' aria-hidden='true'>
  <div class='modal-dialog' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='loginModalLabel'>
          Log in
        </h5>
        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      <div class='modal-body'>
        <%= form_tag '/login', method: :post do %>
          <fieldset>
            <div class='form-group'>
              <%= label_tag :input_username, 'Username' %>
              <%= text_field_tag :input_username, nil, class: 'form-control', placeholder: 'Username' %>
            </div>
            <div class='form-group'>
              <%= label_tag :input_password, 'Password' %>
              <%= password_field_tag :input_password, nil, class: 'form-control', placeholder: 'Password', 'aria-described-by': 'input-password-help' %>
              <p id='input-password-help' class='form-text small'><a href='#'>Forgot password</a></p>
            </div>
            <%= submit_tag 'Log in', class: 'btn btn-primary' %>
          </fieldset>
        <% end %>
      </div>
      <div class='modal-footer'>
        <button href='#' type='button' class='btn btn-default'>Request membership</button>
      </div>
    </div>
  </div>
</div>
